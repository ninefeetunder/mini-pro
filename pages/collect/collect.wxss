/* pages/collect/collect.wxss */
page {
  background-color: #f3f4f6;
}

.collect-goods-wrap {
  margin-top: 30rpx;
  background: #fff;
}


.goods-item {
  display: flex;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}

.goods-img-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods-img-wrap image {
  width: 70%;
}

.goods-info-wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.goods-name {
  /* 规定在第几行写出省略号 */
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-price {
  color: var(--themeColor);
  font-size: 32rpx;
}