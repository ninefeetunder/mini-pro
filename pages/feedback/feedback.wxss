page {
  background: #eee;
}

.fd-main {
  padding: 20rpx;
}

.fd-tips {
  display: flex;
  flex-wrap: wrap;
}

.fd-tips > text {
  padding: 10rpx 40rpx;
  background: #fff;
  margin: 20rpx;
}

.fd-content {
  background: #fff;
}

.fd-tool {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.fd-tool > button {
  width: 90rpx;
  height: 90rpx;
  background: #eee;
  font-size: 40rpx;
  margin: 0;
}

.up-img-item {
  margin-left: 26rpx;
}

.fd-form-wrap {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.fd-form-wrap > button {
  margin: 0;
  background: #f3533c;
  color: #fff;
  font-size: 30rpx;
}